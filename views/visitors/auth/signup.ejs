<%- include ('../../shared/includes/head' ,{pageTitle:'Signup' })%>
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
    <%- include ('../../shared/includes/header') %>
    <main>
        <h1>Create new Account</h1>
        <% if(inputData.errorMessage) { %>
            <section class="alert">
                <h2>Invalid Input</h2>
                <p><%= inputData.errorMessage %></p>
            </section>
            <% } %>
            <form action="/signup" method="POST">
            <input type="hidden" name="_csrf" value ="<%= locals.csrfToken %>">
            <p>
            <label for="email">Email</label>
           <input type ="email>" id="email" name="email" placeholder="enter your email" value="<%= inputData.email %>" required>
           </p>
           <p>
            <label for="confirm-email">Confirm Email</label>
           <input type ="email>" id="confirm-email" name="confirm-email" placeholder="re-enter your email" 
           value="<%= inputData.confirmEmail %>"
           required>
           </p>
           <p>
            <label for="password">Password</label>
           <input type ="password" id="password" name="password" placeholder="password" minlength="8"
           value="<%= inputData.password %>"required>
           </p>
           <hr> 
           <p>
            <label for ="fullname">Full Name</label>
            <input type ="text" id="fullname" name="fullname" placeholder="enter your name"
            value="<%= inputData.fullname %>"required>
           </p>
           <p>
            <label for ="semester">Semester</label>
            <input type ="number" id="semester" name="semester"  maxlength="1" minvalue="1"value="<%= inputData.semester %>" required>
           </p>
           <p>
            <label for ="faculty">Faculty</label>
            <input type ="text" id="faculty" name="faculty" placeholder="enter your faculty" value="<%= inputData.faculty%>" required>
           </p>
           <button class="btn">Create Account</button>
        <p id = "switch-form"> <a href="/login">Login instead</a></p>
        </form>
    </main>
    
<%- include ('../../shared/includes/footer') %>